{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/Privado-Inc/privado-core/tree/main/src/main/resources/ai/privado/rulevalidator/schema/threats.json",
  "title": "Root",
  "type": "object",
  "required": [
    "threats"
  ],
  "additionalProperties": false,
  "properties": {
    "threats": {
      "$id": "#root/threats",
      "title": "Threats",
      "type": "array",
      "default": [],
      "items":{
        "$id": "#root/threats/items",
        "title": "Items",
        "type": "object",
        "required": [
          "id",
          "name",
          "type",
          "description",
          "fix",
          "repositories"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "$id": "#root/threats/items/id",
            "title": "Id",
            "type": "string",
            "default": "",
            "examples": [
              "Threats.Configuration.Mobile.isBackgroundScreenshotEnabled"
            ],
            "pattern": "^.*$"
          },
          "name": {
            "$id": "#root/threats/items/name",
            "title": "Name",
            "type": "string",
            "default": "",
            "examples": [
              "Background screenshots not disabled"
            ],
            "pattern": "^.*$"
          },
          "description": {
            "$id": "#root/threats/items/description",
            "title": "Description",
            "type": "string",
            "default": "",
            "examples": [
              "Finding Sensitive Information in Auto-Generated Screenshots"
            ]
          },
          "dataFlow": {
            "$id": "#root/threats/items/dataFlow",
            "title": "Dataflow",
            "type": "object",
            "required": [
              "sources"
            ],
            "additionalProperties": false,
            "properties": {
              "sources": {
                "$id": "#root/threats/items/dataFlow/sources",
                "title": "Sources",
                "type": "array",
                "default": [],
                "items":{
                  "$id": "#root/threats/items/dataFlow/sources/items",
                  "title": "Items",
                  "type": "string",
                  "format": "regex",
                  "default": "",
                  "examples": [
                    "Data.Sensitive.ContactData.*"
                  ],
                  "pattern": "^.*$"
                }
              },
              "sourceFilters": {
                "$id": "#root/policies/items/dataFlow/sourceFilters",
                "title": "SourceFilters",
                "type": "object",
                "default": null
              },
              "sinks": {
                "$id": "#root/threats/items/dataFlow/sinks",
                "title": "Sinks",
                "type": "array",
                "default": [],
                "items":{
                  "$id": "#root/threats/items/dataFlow/sinks/items",
                  "title": "Items",
                  "type": "string",
                  "format": "regex",
                  "default": "",
                  "examples": [
                    "Miscellaneous.Threats.AndroidNotification"
                  ],
                  "pattern": "^.*$"
                }
              },
              "sinkFilters": {
                "$id": "#root/policies/items/dataFlow/sinkFilters",
                "title": "SinkFilters",
                "type": "object",
                "default": null
              },
              "collectionFilters": {
                "$id": "#root/policies/items/dataFlow/collectionFilters",
                "title": "CollectionFilters",
                "type": "object",
                "default": null
              }
            }
          },
          "repositories": {
            "$id": "#root/threats/items/repositories",
            "title": "Repositories",
            "type": "array",
            "default": [],
            "items":{
              "$id": "#root/threats/items/repositories/items",
              "title": "Items",
              "type": "string",
              "format": "regex",
              "default": "",
              "examples": [
                "privado-messaging-**"
              ],
              "pattern": "^.*$"
            }
          },
          "tags": {
            "$id": "#root/collections/items/tags",
            "title": "Tags",
            "type": ["object", "null"],
            "default": null
          },
          "config": {
            "$id": "#root/policies/items/config",
            "title": "Config",
            "type": ["object", "null"],
            "default": null,
            "patternProperties": {
              "^.*$": { "type": "string" }
            },
            "additionalProperties": false
          },
          "type": {
            "$id": "#root/threats/items/type",
            "title": "Type",
            "type": "string",
            "default": "",
            "examples": [
              "Threat"
            ],
            "pattern": "^Threat$"
          },
          "fix": {
            "$id": "#root/threats/items/fix",
            "title": "Fix",
            "type": "string",
            "default": "",
            "examples": [
              "Ensure that FLAG_SECURE option is set on the window."
            ]
          }
        }
      }

    }
  }
}
